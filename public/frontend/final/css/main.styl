$thin-weight = 200
$light-weight = 400
$medium-weight = 500
$bold-weight = 700

@keyframes start-straw
	0%
		top -1500px
	100%
		top 600px

@keyframes start-straw-zero
	0%
		top -1500px
	100%
		top 0

@keyframes normal-animation
	0%
		clip rect(0,350px,0,0)
	100%
		clip rect(0,350px,800px,0)

@keyframes italic-animation
	0%
		//opacity 0
		color white
	50%
		//opacity 1
		color $orange-color
	100%
		//opacity 1
		color white

@keyframes scale-in-animation
	0%
		transform scale(1)
	50%
		transform scale(0.5)
	100%
		transform scale(1)

@keyframes scale-out-animation
	0%
		transform scale(0.9)

	45%
		transform scale(1.1)
	75%
		transform scale(0.8)
	100%
		transform scale(1)

@keyframes slide-in-animation
	0%
		clip rect(0,0,153px,0)
	100%
		clip rect(0,300px,153px,0)

@keyframes arrow-animation
	from
		background-position left 0
	to
		background-position left -1152px


@keyframes blink-orange-animation
	0%
		color $orange-color
	100%
		color white


i.scroll-animation
